<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

          <%= link_to "Bookers", root_path ,class:'navbar-brand'%>

          <div class="collapse navbar-collapse">
              <% if user_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to user_path(current_user.id),class:"change-btn" do %>
                    <div class="icon"><i class="fas fa-home nav-link text-light"></i></div>
                    <div class="icon-name">Home</div>
                  <% end %>
                </li>
                <li>
                  <%= link_to users_path,class:"change-btn" do %>
                    <div class="icon"><i class="fas fa-users nav-link text-light"></i></div>
                    <div class="icon-name">Users</div>
                  <% end %>
                </li>
                <li>
                  <%= link_to books_path,class:"change-btn" do %>
                    <div class="icon"><i class="fas fa-book-open nav-link text-light"></i></div>
                    <div class="icon-name">Books</div>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete,class:"change-btn" do %>
                    <div class="icon"><i class="fas fa-sign-out-alt nav-link text-light"></i></div>
                    <div class="icon-name">logout</div>
                  <% end %>
                </li>
              </ul>
              <% else %>
              <ul class="navbar-nav ml-auto">
                <li>
                  <%= link_to root_path,class:"change-btn" do %>
                    <div class="icon"><i class="fas fa-home nav-link text-light"></i></div>
                    <div class="icon-name">Home</div>
                  <% end %>
                </li>
                 <li>
                  <%= link_to about_path,class:"change-btn" do%>
                    <div class="icon"><i class="fas fa-link nav-link text-light"></i></div>
                    <div class="icon-name">About</div>
                  <% end %>
                </li>
                 <li>
                  <%= link_to new_user_registration_path,class:"change-btn" do %>
                    <div class="icon"><i class="fas fa-user-plus nav-link text-light"></i></div>
                    <div class="icon-name">sign up</div>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path,class:"change-btn" do %>
                    <div class="icon"><i class="fas fa-sign-in-alt nav-link text-light"></i></div>
                    <div class="icon-name">login</div>
                  <% end %>
                </li>
              </ul>
              <% end %>
          </div>
        </div>
      </nav>
    </header>
        <% flash.each do |key, value| %>
        <%= content_tag(:p, value, class: "#{key}") %>
        <% end %>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class ="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
