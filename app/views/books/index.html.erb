<body>
    <div>
        <h2>User info</h2>
        <% if @book.errors.any? %>
            <div class="error_message">
            <h2 class="error_num"><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
            </div>
        <% end %>
        <table>
            <tr>
                <th>
                    <% if current_user.image.attached? %>
                        <%= image_tag current_user.image, size: "63x63" %>
                    <% else %>
                        <%= image_tag 'no_image', size: "63x63" %>
                    <% end %>
                </th>
            </tr>
            <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
            </tr>
            <tr>
                <th>inteoduction</th>
                <th><%= current_user.introduction %></th>
            </tr>
        </table>
        <div>

        <%= link_to "編集",edit_user_path(current_user.id) %>
        </div>
        <%= form_with model: @book,method: :post do |f|%>
            <h2>New book</h2>
            <div>
                <label for="book_name">Title</label>
                <div><%= f.text_field :title %></div>
            </div>
            <div>
                <label for="book_option">Option</label>
                <div><%= f.text_area :body %></div>
            </div>
            <div>
                <%= f.submit 'Create Book' %>
            </div>
        <% end %>
        <h2>Books</h2>
        <table>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
            <% @books.each do |book| %>
            <tr>
                <% user = User.find_by(id:book.user_id) %>
              <td>
                  <%= link_to user_path(user.id) do %>
                        <% if user.image.attached? %>
                            <%= image_tag user.image, size: "40x40" %>
                        <% else %>
                            <%= image_tag 'no_image', size: "40x40" %>
                        <% end %>
                    <% end %>
              </td>
              <td><%= link_to book.title ,book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
             <% end %>
        </table>

    </div>
</body>