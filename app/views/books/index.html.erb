<body>
    <div>
        <% if @book.errors.any? %>
            <div class="error_message">image
            <h2 class="error_num"><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
            </div>
        <% end %>
        <div class="container px-5 px-sm-0 pt-3">
            <div class="row">
                <div class="col-md-3">
                    <%= render 'devise/shared/user',user: @user %>
                </div>
                <div class="col-md-8 offset-md-1">
                    <h2>Books</h2>
                    <table class="table table-hover table-inverse">
                        <tr>
                          <th style="width: 10%"></th>
                          <th style="width: 30%">Title</th>
                          <th style="width: 60%">Opinion</th>
                        </tr>
                        <% @books.each do |book| %>
                        <tr>
                            <% user = User.find_by(id:book.user_id) %>
                          <td>
                              <%= link_to user_path(user.id) do %>
                                    <% if user.profile_image.attached? %>
                                        <%= image_tag user.profile_image, size: "40x40" %>
                                    <% else %>
                                        <%= image_tag 'no_image', size: "40x40" %>
                                    <% end %>
                                <% end %>
                          </td>
                          <td><%= link_to book.title ,book_path(book.id) %></td>
                          <td><%= book.body %></td>
                        </tr>
                         <% end %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>