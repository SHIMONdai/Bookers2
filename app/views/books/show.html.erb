<body>
    <div>
        <h2>Book detail</h2>
        <table>
                <tr>
                    <th>
                        <% if @user.image.attached? %>
                            <%= image_tag @user.image, size: "63x63" %>
                        <% else %>
                            <%= image_tag 'no_image', size: "63x63" %>
                        <% end %>
                    </th>
                </tr>
                <tr>
                    <th>name</th>
                    <th><%= @user.name %></th>
                </tr>
                <tr>
                    <th>inteoduction</th>
                    <th><%= @user.introduction %></th>
                </tr>
            </table>
            <div>
                <% if @user.id == current_user.id %>
                <%= link_to "編集",edit_user_path(current_user.id) %>
                <% else %>
                <%= link_to "編集",user_path(current_user.id) %>
                <% end %>
            </div>
            <%= form_with model: Book.new,method: :post do |f|%>
                <h2>New book</h2>
                <div>
                    <label for="book_name">Title</label>
                    <div><%= f.text_field :title %></div>
                </div>
                <div>
                    <label for="book_option">Option</label>
                    <div><%= f.text_area :body %></div>
                </div>
                <div>
                    <%= f.submit 'Create Book' %>
                </div>
            <% end %>
            <h2>Book detail</h2>
        <table>
            <tr>
                <td>
                    <%= link_to user_path(@user.id) do %>
                        <% if @user.image.attached? %>
                            <%= image_tag @user.image, size: "40x40" %>
                        <% else %>
                            <%= image_tag 'no_image', size: "40x40" %>
                        <% end %>
                        <p><%= @user.name %></p>
                    <% end %>
                </td>
                <td><%= link_to @book.title,book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                <% if @book.user_id == current_user.id %>
                    <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
                    <td><%= link_to "Destroy",book_path ,method: :delete, "data-confirm" => "本当に消去しますか？"%></td>
                <% end %>
            </tr>
        </table>
    </div>
</body>