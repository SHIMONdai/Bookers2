
    <div class="container pt-3">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                <h2>User info</h2>
                <div class="error_message">
                    <% if @user.errors.any? %>
                    <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
                      <ul>
                        <% @user.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    <% end %>
                </div>
                <%= form_with model: @user,url: user_path(@user),method: :patch do |f| %>
                <div>
                    <div class="form-group">
                        <label for="user_name">Name</label>
                        <div>
                            <%= f.text_field :name ,class:"form-control name"%>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="user_image">Image</label>
                        <div>
                            <%= f.file_field :profile_image, accept: "image/*" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="user_introduction">Introduction</label>
                        <div>
                            <%= f.text_area :introduction,class:"form-control introduction" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <%= f.submit "Update User",class:"btn btn-secondary" %>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</body>
