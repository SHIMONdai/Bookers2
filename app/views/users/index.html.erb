<body>
    <div>
        <h2>User info</h2>
        <table>
            <tr>
                <th>
                    <% if current_user.image.attached? %>
                        <%= image_tag current_user.image, size: "63x63" %>
                    <% else %>
                        <%= image_tag 'no_image', size: "63x63" %>
                    <% end %>
                </th>
            </tr>
            <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
            </tr>
            <tr>
                <th>intoroduction</th>
                <th><%= current_user.introduction %></th>
            </tr>
        </table>
        <div>
            <%= link_to "編集",edit_user_path(current_user.id) %>
        </div>
        <%= form_with model: @book,method: :post do |f|%>
            <h2>New book</h2>
            <div>
                <label for="book_name">Title</label>
                <div><%= f.text_field :title %></div>
            </div>
            <div>
                <label for="book_option">Option</label>
                <div><%= f.text_area :body %></div>
            </div>
            <div>
                <%= f.submit 'Create Book' %>
            </div>
        <% end %>
        <h2>Users</h2>
        <table>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
            </tr>
            <% @users.each do |user| %>
            <tr>
              <td>image</td>
              <td><%= user.name %></td>
              <td><%= link_to "Show",user_path(user.id) %></td>
            </tr>
             <% end %>
        </table>

    </div>
</body>