
       <h2>User info</h2>

        <% if user.profile_image.attached? %>
        <%= image_tag user.profile_image, size: "63x63" %>
        <% else %>
        <%= image_tag 'no_image', size: "63x63" %>
        <% end %>
        <table class="table">
            <tr>
                <th>name</th>
                <th><%= user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= user.introduction %></th>
            </tr>
        </table>

        <div>
             <%= link_to edit_user_path(user.id) do %>
                <i class="fas fa-user-cog btn btn-outline-secondary btn-block"></i>
            <% end %>
        </div>


        <%= form_with model: Book.new,method: :post do |f|%>
            <h2 class="mt-3">New book</h2>
            <div class="form-group">
                <label for="book_name">Title</label>
                <div><%= f.text_field :title,class:"form-control book_title" %></div>
            </div>
            <div class="form-group">
                <label for="book_option">Option</label>
                <div><%= f.text_area :body , class:"form-control book_body"%></div>
            </div>
            <div>
                <%= f.submit 'Create Book',class:"btn btn-success" %>
            </div>
        <% end %>